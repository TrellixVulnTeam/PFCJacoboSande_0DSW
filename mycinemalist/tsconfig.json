{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "declaration": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "outDir": "lib",
    "inlineSources": false,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": false,
    "noUnusedLocals": false,
  },
  "include": [
    "src",
    "src/**/*.ts",
    "src/**/*.tsx"
  ]
}
